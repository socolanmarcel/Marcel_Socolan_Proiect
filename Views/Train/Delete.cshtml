@model Marcel_Socolan_Proiect.Models.Train

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Sterge Tren</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Speed"></label>
            <input asp-for="Speed" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Sterge</button>
        <a asp-controller="Train" asp-action="Index" class="btn btn-primary" style="width:150px">
            Inapoi la lista de trenuri
        </a>
    </div>
</form>
