@model Marcel_Socolan_Proiect.Models.Route

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Sterge Conductorul</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="DepartureTime"></label>
            <input asp-for="DepartureTime" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ArrivalTime"></label>
            <input asp-for="ArrivalTime" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Sterge</button>
        <a asp-controller="Route" asp-action="Index" class="btn btn-primary" style="width:150px">
            Inapoi la lista de rute
        </a>
    </div>
</form>
